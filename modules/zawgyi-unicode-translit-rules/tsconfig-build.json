{
  "extends": "../../tsconfig.json",
  "compilerOptions": {
    "target": "es2015",
    "module": "es2015",

    "importHelpers": true,
    "sourceMap": true,
    "inlineSources": true,
    "declaration": true,

    "types": [],

    "baseUrl": ".",
    "rootDir": ".",
    "outDir": "../../dist/packages/zawgyi-unicode-translit-rules"
  },
  "files": [
    "public_api.ts"
  ],
  "angularCompilerOptions": {
    "annotateForClosureCompiler": true,
    "strictMetadataEmit": true,
    "skipTemplateCodegen": true,
    "fullTemplateTypeCheck": true,
    "strictInjectionParameters": true,
    "flatModuleOutFile": "zawgyi-unicode-translit-rules.js",
    "flatModuleId": "@myanmartools/zawgyi-unicode-translit-rules"
  }
}
